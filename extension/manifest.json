{
  "manifest_version": 3,
  "name": "Netflix Sync",
  "version": "1.0.0",
  "description": "Sync Netflix playback between two devices",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.netflix.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.netflix.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
